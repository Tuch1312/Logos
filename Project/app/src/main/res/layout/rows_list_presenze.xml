<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <TextView
         android:id="@+id/cognome"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentStart="true"
         android:layout_alignParentTop="true"
         android:layout_marginTop="1dp"
         android:text="@string/cognome" />

    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cognome"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:text="@string/nome" />

    <TextView
        android:id="@+id/oraingresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cognome"
        android:text="ora ingresso" />

    <TextView
        android:id="@+id/orauscita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/oraingresso"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/nome"
        android:text="ora uscita" />

    <Switch
        android:id="@+id/switchbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/nome"
        android:textOff="assente"
        android:textOn="presente" />


</RelativeLayout>
