<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dettofatto.logos.DashBoardLezioni">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corso"
        android:textSize="36sp"
        android:id="@+id/titolo"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:layout_margin="15dp"
        android:padding="8dp"
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titolo"
        />


    <TextView
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/progress"
        android:layout_below="@id/titolo"
        android:text="Ultima Lezione"
        android:textSize="18dp"
        android:id="@+id/text1"/>

    <TextView
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/progress"
        android:layout_alignBottom="@id/progress"
        android:text="Prossima Lezione"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress"
        android:text="ciao questa Ã¨ la descrizione degli argomenti trattati fin ora in lista
                        tutto cio a scopo puramente illustrativo"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:lineSpacingExtra="2dp"
        android:textStyle="italic"/>





</RelativeLayout>


