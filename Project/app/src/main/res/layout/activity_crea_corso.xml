<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dettofatto.logos.CreaCorso">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/crea_corso"
        style="@style/titolo_medio"
        android:layout_gravity="center"
         />


    <EditText
        android:id="@+id/editTitolo"
        android:layout_width="260dp"
        android:layout_marginTop="35dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="@string/titolo"
        android:inputType="textPersonName" />



    <EditText
        android:id="@+id/editDescrizione"
        android:layout_width="260dp"
        android:layout_marginTop="20dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="@string/descrizione"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="10"
        android:minLines="1"
        android:scrollbars="vertical"


        />
        <EditText
            android:id="@+id/editNumMaxStudenti"
            android:layout_width="260dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="@string/numero_max_studenti"
            android:inputType="text" />

        <EditText
            android:id="@+id/editSede"
            android:layout_width="260dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="@string/sede"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button2"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:text="optional"
            style="@style/pulsante_schermo_intero"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layoutscomparsa"
            android:visibility="gone">
        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editNumeroGiorni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="numero giorni"
                android:inputType="number" />

            <EditText
                android:id="@+id/editDurataLezione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="durata lezione"
                android:inputType="number"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/editNumeroLezioniPerGiorno"
            android:layout_width="260dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="@string/n_lezioni_x_giorno"
            android:inputType="number" />

        <EditText
            android:id="@+id/editOraInizioLezioni"
            android:layout_width="260dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="ora inizio lezioni"
            android:inputType="number" />
        <EditText
            android:id="@+id/editPatternLezioni"
            android:layout_width="260dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="pattern lezioni"
            android:inputType="number" />
        </LinearLayout>



        <Button
            android:id="@+id/button"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:text="@string/crea"
            style="@style/pulsante_schermo_intero"/>



    </LinearLayout>
</ScrollView>
